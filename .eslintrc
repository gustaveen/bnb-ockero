{
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true,
        "modules": true
      }
    },
    "ecmaFeatures": {
        "jsx": true,
        "modules": true,
        "destructuring": true,
        "spread": true,
        "blockBindings": true,
        "classes": true,
        "forOf": true
    },
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "strict": 2,
        "camelcase": 0,
        "curly": 2,
        "no-unused-vars": 0,
        // Set to 1 before going live
        "no-console": 0,
        "indent": [2, 4, {"SwitchCase": 1}],
        "comma-spacing": 2,
        "quotes": [2, "single"],
        "no-var": 2,
        "max-len": [1, 120, 4, {"ignoreComments": true, "ignoreUrls": true}]
    },
    "globals": {
        "React": false
    }
}
